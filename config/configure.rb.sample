# Configure Spotify destination playlist and Authorization Token
def configure_env

  # Change these three settings when setting up
  ENV["client_id"] ||= "<Your Spotify Client ID>"
  ENV["client_secret"] ||= "<Your Spotify Client Secret>"
  ENV["playlist_id"] ||= "<Make some changes>"

  ENV["refresh_token"] = File.read('./config/refresh_token') if File.exist?('./config/refresh_token')
end